
<div class="formCompany">
    <form action="agregardesarrolladora" method="post" enctype="multipart/form-data">
        <input type="file" name="img" id="imageToUpload" required>
        <label for="company"> Nombre:</label>
        <input type="text" id="nombre" name="company" placeholder="Nombre de la compañia" required>
            
        <label for="text">Información:</label>
        <textarea id="texto" name="text" placeholder="Agrega información de la compañía" required></textarea>
        <button class="btn_form_company" type="submit" value="Agregar Compañía"> Agregar </button>
    </form>
</div>


